<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/beiing01"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/rlparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="35dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/username"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="2dp"
                        android:id="@+id/giftype"
                        android:textColor="@color/ffc600"
                        android:textSize="11sp" />

                </LinearLayout>

                <com.rzico.weex.zhibo.view.CircleImageView
                    android:id="@+id/crvheadimage"
                    android:layout_width="30dp"
                    android:layout_centerVertical="true"
                    android:layout_height="30dp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <com.rzico.weex.zhibo.view.GifView
                    android:id="@+id/ivgift"
                    android:layout_width="38dp"
                    android:layout_height="38dp"/>

                <com.rzico.weex.zhibo.view.MagicTextView
                    android:id="@+id/giftNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/ivgift"
                    android:includeFontPadding="false"
                    android:text="x1"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:strokeColor="@android:color/white"
                    app:strokeJoinStyle="miter"
                    app:strokeWidth="2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>