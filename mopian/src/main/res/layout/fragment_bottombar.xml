<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />


        <LinearLayout
            android:id="@+id/say_ll"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:background="@drawable/bg02"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_input"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="聊点什么吧~"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="38dp"
            android:layout_gravity="top"
            android:id="@+id/member_menu_more"
            android:gravity="center"
            android:visibility="visible"
            android:background="@drawable/bg01"
            android:layout_height="38dp">
            <TextView
                android:layout_width="20dp"
                android:gravity="center"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/gift" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="38dp"
            android:layout_gravity="top"
            android:id="@+id/member_fullscreen_btn"
            android:gravity="center"
            android:background="@drawable/bg01"
            android:layout_height="38dp">
            <TextView
                android:layout_width="20dp"
                android:gravity="center"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/good" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/member_send_good"
            android:background="@drawable/bg03"
            android:layout_height="38dp">
            <TextView
                android:layout_width="20dp"
                android:gravity="center"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/shop"
                />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>
    <com.rzico.weex.zhibo.view.InputPanel
    android:id="@+id/input_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"/>
</LinearLayout>
